scriptencoding utf-8
set encoding=utf-8

" Display line numbers on the left
set number

set cursorline

" Show invisible characters
set list
" show only tab and whitespace
set listchars=space:·,trail:·

" Use spaces instead of tabs
set expandtab

" 1 tab == 4 spaces
set shiftwidth=4
set tabstop=4

" auto indentation
set autoindent

" enable 256 colors
set t_Co=256

colorscheme desert

set noswapfile

